@model AKQA.Models.Employee
@{
    ViewData["Title"] = "Home Page";
}
    <head>
        <script src="~/js/jquery-3.2.1.min.js"></script>
        <script src="~/js/FormatNumber.js"></script>
    </head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3>Input</h3>
                <form id="frmAKQA">
                    <div asp-validation-summary="All" class="danger"></div>
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control required" />

                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input asp-for="Salary" class="form-control required" />
                        </div>
                    </div>
                    <div class="row">
                        <button type="button" id="btnSubmit" class="btn btn-primary float-right"> Show Output</button>
                    </div>
                </form>

            </div>
            <div class="col-md-6">
                <div class="row">
                    <h3>Output</h3>
                    <div class="column">
                        <div class="card">
                            <p id="spName"></p>
                            <p id="spNumberinWords"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
